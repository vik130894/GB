#Задание 1

import time

class TrafficLight:
    __color = ""

    def running(self):

        self.__color = "red"
        print(f'Установлен цвет: {self.__color}')
        time.sleep(7)

        self.__color = "yellow"
        print(f'Установлен цвет: {self.__color}')
        time.sleep(2)

        self.__color = "green"
        print(f'Установлен цвет: {self.__color}')
        time.sleep(6)

        while True:
            self.running()

traff_light = TrafficLight()
print(traff_light.running())

#Задание2

class Road:
    _length: int
    _width: int

    def __init__(self, _length, _width, mass, thickness):
        self._length = _length
        self._width = _width
        self.mass = mass
        self.thickness = thickness

    def masasph(self):
        return self._length * self._width * self.mass * self.thickness


test = Road(20, 5000, 25, 5)
print(f'Масса асфальта: {test.masasph()/1000} тонн')

#Задание 3

class Worker:
    name = ""
    surname = ""
    position = ""
    _income = {'wage': 'wage', 'bonus': 'bonus'}


class Position(Worker):
    def __init__(self, name: str, surname: str, wage: float, bonus: float):
        self.name = name
        self.surname = surname
        self._income['wage'] = wage
        self._income['bonus'] = bonus

    def get_full_name(self):
        return f"{self.name} {self.surname}"

    def get_total_income(self):
        return f"{self._income['wage'] + self._income['bonus']}"


test = Position(name="Stan", surname="Smith", wage=30.23, bonus=11.65)

print(test.get_full_name())
print(test.get_total_income())

#Задание 4

class Car:
    name: str
    color: str
    speed: float
    is_police: bool

    def __init__(self, name, color, speed, is_police):
        self.name = name
        self.color = color
        self.speed = speed
        self.is_police = is_police

    def go(self):
        return print('Поехали')

    def stop(self):
        return print('Остановились')

    def turn(self, direction):
        return print(f'Повернули {direction}')

    def show_speed(self):
        return self.speed


class TownCar(Car):
    def __init__(self, name, color, speed, is_police):
        self.name = name
        self.color = color
        self.speed = speed
        self.is_police = is_police

    def info(self):
        print(self.name, self.color, self.speed, self.is_police)

    def show_speed(self):
        if self.speed > 60:
            return print(f"Превышение скорости {self.name}!")


class SportCar(Car):
    def __init__(self, name, color, speed, is_police):
        self.name = name
        self.color = color
        self.speed = speed
        self.is_police = is_police

    def info(self):
        print(self.name, self.color, self.speed, self.is_police)


class WorkCar(Car):
    def __init__(self, name, color, speed, is_police):
        self.name = name
        self.color = color
        self.speed = speed
        self.is_police = is_police

    def info(self):
        print(self.name, self.color, self.speed, self.is_police)

    def show_speed(self):
        if self.speed > 40:
            return print(f"Превышение скорости {self.name}!")
        return self.speed


class PoliceCar(Car):
    def __init__(self, name, color, speed, is_police):
        self.name = name
        self.color = color
        self.speed = speed
        self.is_police = is_police

    def info(self):
        print(self.name, self.color, self.speed, self.is_police)


bmw = TownCar("BMW", "Orange", 80, False)
fer = SportCar("Ferrari", "Red", 120, False)
kia = WorkCar("KIA", "Black", 60, False)
reno = PoliceCar("Reno", "White", 40, True)

bmw.info(), bmw.show_speed()

fer.info()

kia.info(), kia.show_speed()

reno.info()

