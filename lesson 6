#Задание 1

import time

class TrafficLight:
    __color = ""

    def running(self):

        self.__color = "red"
        print(f'Установлен цвет: {self.__color}')
        time.sleep(7)

        self.__color = "yellow"
        print(f'Установлен цвет: {self.__color}')
        time.sleep(2)

        self.__color = "green"
        print(f'Установлен цвет: {self.__color}')
        time.sleep(6)

        while True:
            self.running()

traff_light = TrafficLight()
print(traff_light.running())

